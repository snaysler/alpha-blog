<h1>Editing article <%=@article.id%> </h1>

<% if @article.errors.any? %>
<h2>The following errors prevented the article from being edited:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title%>
  </p>
  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, :rows => 20, :cols => 100 %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>